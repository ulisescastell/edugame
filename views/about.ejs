            float: left;
            margin-right: 10px;
            width: 40px;
            height: 40px;
        }

        .navbar .register-btn {
            float: right;
            background-color: #333;
            color: white;
            padding: 10px 20px;
            border: none;
            cursor: pointer;
        }

        .navbar .register-btn:hover {
            background-color: #555;
        }

        h2 {
            color: #333;
            font-size: 2em;
            margin-bottom: 10px;
        }

        p {
            font-size: 1.2em;
            line-height: 1.6;
        }

        footer {
            background-color: #333;
            color: white;
            text-align: center;
            padding: 10px 0;
            margin-top: 20px;
        }

        footer p {
            margin: 0;
            font-size: 1em;
        }
